{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016"],
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "strictPropertyInitialization": false,
    "baseUrl": "./",
    "allowJs": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}